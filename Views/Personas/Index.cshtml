@model IEnumerable<Personas>

<h2>Personas</h2>

<p>Promedio de edad: @ViewBag.PromedioEdad</p>

<p>
    <a asp-action="Create">Crear nueva</a> |
    <a asp-action="Buscar">Buscar</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Edad</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Nombre</td>
                <td>@p.Edad</td>
                <td>
                    <a asp-action="Details" asp-route-id="@p.Id">Detalles</a> |
                    <a asp-action="Edit" asp-route-id="@p.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@p.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>